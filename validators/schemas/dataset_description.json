{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://example.com/example.json",
    "properties": {
        "Authors": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "BIDSVersion": {
            "type": "string"
        },
        "Funding": {
            "items": {
                "type": "string"
            },
            "type": ["array", "string"]
        },
        "HowToAcknowledge": {
          "items": {
              "type": "string"
            },
            "type": ["string", "array"]
        },
        "License": {
            "type": "string"
        },
        "Name": {
            "type": "string"
        },
	"ReferencesAndLinks": {
            "items": {
                "type": "string"
            },
            "type": "array"
	}
    },
    "required": [
        "Name",
        "BIDSVersion"
    ],
    "type": "object"
}
